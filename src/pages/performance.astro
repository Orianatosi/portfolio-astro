---
import Layout from "../layouts/Layout.astro";
import Eventosolo from "../components/eventosolo.astro";
import Modal from "../components/modal.astro";
import mutek1 from "../perfoimg/mutek1.jpg";
import macba from "../perfoimg/macba.jpg";
import museomar from "../perfoimg/museomar.jpg";
import mutekamplify from "../perfoimg/mutekamplify.jpg";
import ushuaia from "../perfoimg/ushuaia.jpg";
import LUMEN2 from "../perfoimg/LUMEN2.jpg";
import modular from "../perfoimg/modular.jpg";
import tecnopolis from "../perfoimg/tecnopolis.gif";
import amplify from "../perfoimg/amplify.gif";
import lumen from "../perfoimg/lumen.gif";
import unlam2 from "../perfoimg/unlam2.gif";





---

<Layout>
  <h1>performance</h1>

  <!-- MODAL -->
  <Modal isOpen={false} />
  <div class="grilla-eventos">
    <Eventosolo title="Lumen EXP (2025)" image={lumen.src} text="" />
    <Eventosolo title="UNLAM - mtz (2025)" image={unlam2.src} text="" />

    <Eventosolo title="Festival Pleamar - Museo MAR (2024)" image={museomar.src} text="" />
    <Eventosolo title="Apertura USHUAIA - CC. San Martin (2024)" image={ushuaia.src} text="" />

    <Eventosolo title="Mutek AR Amplify DAI (2024)" image={amplify.src} text="" />
    <Eventosolo title="Modular - ARTLAB (2023)" image={modular.src} text="" />

    <Eventosolo title="Mutek AR (2023)" image={mutek1.src} text="" />
    <Eventosolo title="Macba (2023)" image={macba.src} text="" />
    <Eventosolo title="Tecnolopis (2022)" image={tecnopolis.src} text="" />




  </div>
</Layout>

<style>
.grilla-eventos {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
  gap: 60px;
  max-width: 1200px;
  margin: 0 auto;
}
.grilla-eventos {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 50px;
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px 0;
}


/* Contenedor de cada evento */
. {
  width: 100%;
  aspect-ratio: 4 / 3;  
  overflow: hidden;
  border-radius: 8px;
  background: #f5f5f5;
  box-shadow: 0 3px 12px rgba(0,0,0,0.1);
}

.evento-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;   
  display: block;
}


  h1 {
    color: #363836;
    text-align: center;
    margin-bottom: 40px;
    font-size: 22px;
    letter-spacing: 2px;
  }



</style>

<script>
  // Le decimos a TS que este elemento tiene setProps()
  const modal = document.getElementById("modal") as any;

  window.addEventListener("openModal", (event) => {
    const e = event as CustomEvent;

    modal?.setProps({
      isOpen: true,
      title: e.detail.title,
      text: e.detail.text,
      images: e.detail.images,
    });
  });

  window.addEventListener("closeModal", () => {
    modal?.setProps({ isOpen: false });
  });
</script>
