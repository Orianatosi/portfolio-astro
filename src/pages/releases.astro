    <style>
        /* titulo */
h1 {
    color: #363836;
  text-align: center;
  margin-bottom: 40px;
  font-size: 22px;
  letter-spacing: 2px;
}

/* grilla de releases */
.releases-grilla {
  display: flex;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 30px;
  max-width: 1200px;
  margin: 0 auto;
  flex-wrap: wrap;
}



/* videos */
.video_contenedor {
  border-radius: 2px;
  overflow: hidden;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
  cursor: pointer;
  background: #fafafa;
  transition: transform 0.3s ease;
  font-family: "Rokkitt", serif;
  font-optical-sizing: auto;
  font-weight:lighter;
  font-style: normal;

}

/* grilla */
#videos {
  background-color: #ffffff; 
  text-align: center;
  font-size: 12px;
  color: #252525;
}

#videos h2 { 
  display: flex;
  justify-content: center; /* centra horizontal */
  align-items: center;     /* centra vertical */
  height: 100px; 
}

