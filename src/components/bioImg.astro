---
const { imagen } = Astro.props;

const imgSrc = imagen && typeof imagen === 'object' && imagen.src ? imagen.src : imagen;
---
<div class="portada-container">
  {imagen && <img src={imagen.src ?? imagen}/>}
</div>

<style>
  .portada-container {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0px;
    box-sizing: border-box;
  }

  .portada-container img {
    max-width: 100%;
    max-height: 80vh;
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
  }
</style>